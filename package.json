{
  "name": "hemtt",
  "displayName": "HEMTT",
  "description": "Use hemtt tool from your heavily themed VSCode",
  "version": "0.2.0",
  "icon": "resources/hemtt-small.png",
  "engines": {
    "vscode": "^1.36.0"
  },
  "categories": [
    "Other"
  ],
  "publisher": "Reidond",
  "repository": {
    "type": "git",
    "url": "https://github.com/Reidond/vscode-hemtt"
  },
  "activationEvents": [
    "onCommand:hemtt.project.create",
    "onCommand:hemtt.project.init",
    "workspaceContains:hemtt.json",
    "workspaceContains:hemtt.toml"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "hemtt.project.create",
        "title": "Create Project",
        "category": "HEMTT"
      },
      {
        "command": "hemtt.project.init",
        "title": "Init Project",
        "category": "HEMTT"
      }
    ],
    "configuration": {
      "title": "HEMTT",
      "properties": {
        "hemtt.path": {
          "type": "string",
          "default": "",
          "description": "Path to hemtt executable"
        }
      }
    },
    "jsonValidation": [
      {
        "fileMatch": "hemtt.*",
        "url": "./schemas/hemtt-0.6.2.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "webpack --mode production",
    "compile": "webpack --mode none",
    "watch": "webpack --mode none --watch",
    "test-compile": "tsc -p ./"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.6",
    "@types/node": "^10.12.21",
    "@types/vscode": "^1.36.0",
    "glob": "^7.1.4",
    "mocha": "^6.1.4",
    "ts-loader": "^6.0.4",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.3.1",
    "vscode-test": "^1.0.0-next.0",
    "webpack": "^4.37.0",
    "webpack-cli": "^3.3.6"
  }
}